{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}

{% block create %}
	<turbo-stream action="append" target="filieres">
		<template>
			<div id="{{ 'filiere_' ~ id }}">
				#{{ id }}
				created:
			</div>
		</template>
	</turbo-stream>
{% endblock %}

{% block update %}
	<turbo-stream action="update" target="filiere_{{ id }}">
		<template>
			#{{ id }}
			updated:
		</template>
	</turbo-stream>
{% endblock %}

{% block remove %}
	<turbo-stream action="remove" target="filiere_{{ id }}"></turbo-stream>
{% endblock %}
